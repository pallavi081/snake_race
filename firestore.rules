rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is an admin
    function isAdmin() {
      return request.auth != null && 
        (exists(/databases/$(database)/documents/admins/$(request.auth.uid)) || 
         request.auth.token.email.matches('ra.*@.*')); // Placeholder for safety, usually specific email
    }

    // User profiles
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if (request.auth != null && request.auth.uid == userId) || isAdmin();
    }

    // Leaderboard
    match /leaderboard/{entryId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if isAdmin();
    }

    // Global Settings (Events, config)
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Admins collection (to manage roles)
    match /admins/{adminId} {
      allow read, write: if isAdmin();
    }

    // Public Rooms for Battle Royale
    match /public_rooms/{roomId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Tournaments
    match /tournaments/{weekId} {
      allow read: if true;
      allow write: if isAdmin();
      
      match /entries/{userId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Friends & Codes
    match /friendCodes/{code} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Global Chat
    match /chat/{msgId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if isAdmin();
    }

    // Player Profiles
    match /profiles/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Analytics
    match /analytics/{docId} {
      allow read: if isAdmin();
      allow write: if request.auth != null;
    }
  }
}
